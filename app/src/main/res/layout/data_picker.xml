<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10px"
    android:minHeight="60dp"
    android:background="@color/background">
<TextView
    android:textColor="@color/std_main"
    android:textSize="@dimen/standart_font_size"
    android:gravity="center"
    android:text="Выберите необходимую неделю"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/undoBtn"
            android:background="?android:selectableItemBackground"
            android:drawableRight="@drawable/ic_baseline_chevron_left_24"
            android:drawableTint="@color/std_main"
            android:layout_width="50dp"
            android:layout_marginRight="5dp"
            android:layout_height="64dp"/>
        <TextView
            android:id="@+id/tvDATE"
            android:textColor="@android:color/black"
            android:textSize="@dimen/standart_font_size"
            android:gravity="center"
            android:text="МЕСЯЦ ГОД!"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/nextBtn"
            android:layout_marginLeft="5dp"
            android:background="?android:selectableItemBackground"
            android:drawableLeft="@drawable/ic_baseline_chevron_right_24"
            android:drawableTint="@color/std_main"
            android:layout_width="50dp"
            android:layout_height="64dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/weeksLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="256dp" />
    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancelBtn"
            android:layout_marginLeft="5dp"
            android:background="?android:selectableItemBackground"
            android:textSize="@dimen/standart_font_size"
            android:textColor="@color/std_main"
            android:text="Назад"
            android:minWidth="56dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
</LinearLayout>